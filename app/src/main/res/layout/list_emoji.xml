<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/emoji_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="D"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/emoji_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/emoji_preview"
        android:layout_toRightOf="@+id/emoji_preview"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lines="1"
        android:text="some description very long wowowowowowowo wowowowow wowowo wowowow"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="24sp"
        android:layout_height="24sp"
        app:srcCompat="@drawable/ic_chevron_right_black_24dp"
        android:layout_alignBottom="@+id/emoji_preview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</LinearLayout>